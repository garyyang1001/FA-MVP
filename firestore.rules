rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 遊戲集合的安全規則
    match /games/{gameId} {
      // 允許任何人讀取遊戲（用於分享功能）
      allow read: if true;
      
      // 允許已認證用戶創建遊戲
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId
        && isValidGameData(request.resource.data);
      
      // 只允許遊戲創作者更新自己的遊戲
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.userId
        && isValidGameUpdate(request.resource.data);
      
      // 只允許遊戲創作者刪除自己的遊戲（軟刪除）
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.userId;
    }
    
    // 用戶資料集合的安全規則  
    match /users/{userId} {
      // 只允許用戶讀取和寫入自己的資料
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
      
      // 允許用戶創建自己的資料
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && isValidUserData(request.resource.data);
    }
    
    // 遊戲統計集合（可選）
    match /gameStats/{gameId} {
      // 允許任何人讀取遊戲統計
      allow read: if true;
      
      // 允許已認證用戶更新遊戲統計（如播放次數）
      allow write: if request.auth != null;
    }
  }
}

// 驗證遊戲資料的完整性
function isValidGameData(data) {
  return data.keys().hasAll(['userId', 'gameConfig', 'createdAt']) &&
         data.userId is string &&
         data.gameConfig is map &&
         data.gameConfig.keys().hasAll(['objectType', 'catcherType']) &&
         data.createdAt is timestamp;
}

// 驗證遊戲更新資料的完整性
function isValidGameUpdate(data) {
  return data.keys().hasAny(['playCount', 'likes', 'isDeleted', 'lastPlayed']) &&
         (!('playCount' in data) || data.playCount is number) &&
         (!('likes' in data) || data.likes is number) &&
         (!('isDeleted' in data) || data.isDeleted is bool);
}

// 驗證用戶資料的完整性
function isValidUserData(data) {
  return data.keys().hasAll(['uid', 'email']) &&
         data.uid is string &&
         data.email is string &&
         (!('displayName' in data) || data.displayName is string);
}
